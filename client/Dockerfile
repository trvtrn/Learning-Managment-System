FROM node:latest

WORKDIR /app

COPY package.json .

RUN npm install


COPY . .

ENV REACT_APP_WS_PROTOCOL=ws
ENV REACT_APP_HTTP_PROTOCOL=http
ENV REACT_APP_DOMAIN=localhost
ENV REACT_APP_CLIENT_PORT=3000
ENV REACT_APP_SERVER_PORT=5001
ENV REACT_APP_PEER_SERVER_PORT=9000

EXPOSE 3000

CMD ["npm", "start"]